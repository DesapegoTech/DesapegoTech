<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script>
        function salvar() {
            var json = {};
            json.nome = document.getElementById("nome").value;
            json.sobreNome = document.getElementById("sobreNome").value;
            json.cpf = document.getElementById("cpf").value;
            json.email = document.getElementById("email").value;

            // Enviar apenas os dados do produto, sem numeroProduto
            json.modelo = document.getElementById("modelo").value;
            json.ano = document.getElementById("ano").value;
            json.preco = document.getElementById("preco").value;

            $.ajax({
                url: "/Contatos/inserir/",
                data: json,
                type: "get",
                success: function (resp) {
                    alert(resp);
                },
                error: function () {
                    alert("Algo deu errado!");
                }
            });
        }
    </script>

    <style>
        body {

            height:750px;
            color: white;
            background: linear-gradient(DarkBlue,LightGray)
        }

        .titulo {
            text-align: center;
        }

        .paragrafo {
            color: white;
        }
        .btn{
            font-weight:bold;
            font-size:1.1em;
            margin:0 auto;
        }
    </style>
</head>

<body>
    <h2 class="titulo">Dados Cliente</h2>
    <div class="container text-left">
        <div class="row align-items-center">
            <div class="col">
            </div>
            <div class="col-8">
                <div class="mb-3">
                    <div class="row g-3">
                        <div class="col">
                            <label for="nome" class="form-label">Nome:</label>
                            <input type="text" class="form-control" id="nome" placeholder="ex Junin" aria-label="First name">
                        </div>
                        <div class="col">
                            <label for="sobreNome" class="form-label">Sobre Nome:</label>
                            <input type="text" class="form-control" id="sobreNome" placeholder="Ex Santos" aria-label="Last name">
                        </div>
                    </div>

                    <label for="cpf" class="form-label">CPF:</label>
                    <input type="text" class="form-control" id="cpf" placeholder="758 **">


                    <label for="email" class="form-label">Email:</label>
                    <input type="text" class="form-control" id="email" placeholder="name@example.com">

                    <h2 class="titulo">Dados Produtos</h2>

                    

                    <label for="email" class="form-label">Modelo:</label>
                    <input type="text" class="form-control" id="modelo" placeholder="name@example.com">

                    <label for="email" class="form-label">Ano:</label>
                    <input type="text" class="form-control" id="ano" placeholder="name@example.com">

                    <label for="email" class="form-label">Preço:</label>
                    <input type="text" class="form-control" id="preco" placeholder="name@example.com">

                    <br/>
                    <button  type="button" class="btn btn-outline-light" value="Salvar" onclick="salvar()">Salvar</button>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
